<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rotationX="-360">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:paddingLeft="33dp"
                android:paddingRight="20dp"
                android:layout_marginStart="39dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="4dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="18dp"
                android:layout_marginEnd="15dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="53dp"
                        android:layout_marginTop="37dp"
                        android:text="Pathkind Labs"
                        android:textAlignment="viewEnd"
                        android:textSize="17sp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/title"
                        android:layout_marginStart="53dp"
                        android:layout_marginTop="2dp"
                        android:text="Raniganj, within 17.5 KM"
                        android:textAlignment="viewEnd"
                        android:textSize="15sp" />

                    <!--Horizontal progressBar -->
                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/location"
                        android:layout_marginStart="53dp"
                        android:layout_marginTop="6dp"
                        android:max="100"
                        android:progress="50"
                        android:progressDrawable="@drawable/progressbar_bg" />

                    <!--Icons -->

                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/progressBar"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="6dp"
                            android:src="@drawable/call_icon" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="6dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/contact_icon" />

                        <ImageView
                            android:layout_width="33dp"
                            android:layout_height="33dp"
                            android:layout_marginHorizontal="6dp"
                            android:src="@drawable/location_icon_circle_blue" />

                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tagRecycler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/linearLayout2"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="9dp"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <TextView
                        android:id="@+id/aboutText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tagRecycler"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="2dp"
                        android:text="@string/home_message"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/aboutText"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="2dp"
                        android:text="Available"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/invite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="53dp"
                        android:layout_marginTop="2dp"
                        android:drawableLeft="@drawable/baseline_add_24"
                        android:text="INVITE"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/color_navy_blue"
                        android:textSize="15sp" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="56dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="#5FB4F7"
                app:cardElevation="18dp">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:elevation="2dp"
                    android:text="PL"
                    android:gravity="center"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="85dp"
                    android:layout_height="90dp"
                    android:elevation="2dp"
                    android:visibility="gone"
                    android:src="@drawable/nature_images"
                    android:scaleType="fitXY" />

            </androidx.cardview.widget.CardView>


        </FrameLayout>



    </RelativeLayout>
</layout>
